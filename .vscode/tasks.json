{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}/*.cpp",
                "${fileDirname}/lexer/*.cpp",
                // "${fileDirname}/parser/*.cpp",
                "${fileDirname}/translator/*.cpp",
                "-o",
                "${workspaceFolder}/bin/Executable"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: \"g++.exe\""
        }
    ]
}
